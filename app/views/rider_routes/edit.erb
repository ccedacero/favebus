<%= form_for @rider_route do |f| %>
<div><%= f.label :rider_id %></div>
<div><%= f.collection_select(:rider_id, @riders, :id, :name) %></div>

<div><%= f.label :bus_route %></div>
<div><%= f.collection_select(:bus_route_id, @bus_route, :id, :route) %></div>

<div><%= f.label :stop%>
<div><%= f.collection_select(:stop_id, @route_data, :stop_id, :stop_name) %></div>

<div><%= f.submit "Edit Route" %></div>
<% end %>
